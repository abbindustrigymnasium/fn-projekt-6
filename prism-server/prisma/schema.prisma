generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  email String @unique

  password String?

  name String?

  balance Int @default(0)

  won Int @default(0)

  donated Int @default(0)

  date Int @default(1675769363) //unix timestamp

  suspended Boolean @default(false)
}

